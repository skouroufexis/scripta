row darkcyan background_darkcyan top1\"><b>{{this.title}}</b></div>\n            <input id=\"note_inputTitle\" v-on:keyup='editTitle' v-if=\"edit\" type=\"text\" class=\"row top1\" v-bind:value='this.title' >\n\n            <div id=\"note_divBody\" v-if=\"!edit\" class=\"row black top1\">{{this.body}}             \n            </div>\n            <textarea  class=\"row top1\" id='note_textareaBody' v-if=\"edit\" maxlength=\"6000\"\n                        v-bind:value='this.body' v-on:keyup='editBody'\n            >                \n            </textarea>\n            \n            <div v-if=\"edit\" class=\"row top1\">\n                <button v-on:click='editOff' class=\"left-auto\">Done</button>                              \n            </div>    \n\n            <div v-if=\"!edit\" class=\"row top1\">\n                <button class=\"left-auto\" v-on:click='pdf'><i class=\"fas fa-file-pdf\"></i></button>                  \n                <button class=\"left2 \" v-on:click='editOn'><i class=\"far fa-edit\"></i></button>\n            </div>    \n\n            \n        </div>\n    </div>    \n    \n</template>\n\n\n<script>\n\nimport pdfMake from \"pdfmake/build/pdfmake\";\nimport pdfFonts from \"pdfmake/build/vfs_fonts\";\npdfMake.vfs = pdfFonts.pdfMake.vfs;\n\nexport default {\n    name:'Note',\n\n    data:function(){\n        return{\n           date:(()=>{\n\n               let months=['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];\n\n               let fullDate=this.noteData[0].date;\n                   fullDate=fullDate.split('-');\n               \n               let year=fullDate[0];\n               let month=fullDate[1];\n                   months.forEach((m,index)=>{\n                       if(month==index+1 || month== '0'+index+1){\n                           month=m;\n                       } \n                   });\n               let day=fullDate[2];\n                   day=day.substring(0,2);\n\n               let newDate=day+' '+ month+' '+year;\n                return newDate;\n           })(),\n\n           time:(()=>{\n                \n                let fullTime=this.noteData[0].time;\n                    fullTime=fullTime.split(':');\n                let hours=fullTime[0];\n                let minutes=fullTime[1];\n                let newTime=hours+':'+minutes;\n                return newTime;\n           })(),\n\n           title:(()=>{\n                return this.noteData[0].title;    \n           })(),\n\n           body:(()=>{\n                return this.noteData[0].body;    \n           })(),\n           edit:false,\n\n           \n        }\n    },\n\n    props:['noteData'],\n    methods:{\n        \n        editOn:function(){\n            this.edit=true;\n        },\n        editOff:function(){\n            this.edit=false;\n        },\n\n        editTitle:function(){\n            let title=document.getElementById('note_inputTitle').value.trim();\n            this.title=title;\n        },\n\n        editBody:function(){\n            let body=document.getElementById('note_textareaBody').value.trim();\n            this.body=body;\n        },\n        pdf: function(){\n            \n            \n        \n        \n        \n        var docDefinition = { content: [\n                            {text:this.title,fontSize:15},\n                            \n                            this.body\n                            \n                            ] };\n        // pass the \"win\" argument\n        pdfMake.createPdf(docDefinition).open();\n            \n            \n            \n        },\n        \n\n       //\n\n    },\n}\n</script>\n\n\n<style>\n\n\n    #note_divBody{\n        position: relative;\n        text-align: justify;\n        white-space: pre-wrap;\n        height: 200px;\n        overflow-y: scroll;\n        padding: 1%;\n    }\n    \n   #note_textareaBody {\n        \n        resize: none;\n        text-align: justify;\n        width: 100%;                \n        height: 200px;\n        border: solid rgba(0,0,0,0.1) thin;\n        color: rgba(0,0,0,0.8);\n        \n        /* overflow-y: scroll; */\n        padding: 1%;\n    }\n\n    \n\n</style>\n\n"]}]}